{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "CallbackPath": "/signin-oidc",
    "BaseUrl": "https://localhost:44334", //Change to WEBSITE.azurewebsites.net before publishing.
    "ClientId": "<ClientId>",
    "ClientSecret": "<ClientSecret>", // This sample uses a password (secret) to authenticate. Production apps should use a certificate.
    "NotificationUrl": "<WEBSITEURL>.azurewebsites.net/notification/listen",
    "Scopes": "openid email profile offline_access",
    "GraphResourceId": "https://graph.microsoft.com/",
    "GraphScopes": "User.Read User.ReadBasic.All Mail.Send"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  }
}